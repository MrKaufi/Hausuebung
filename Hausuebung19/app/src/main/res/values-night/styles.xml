<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/mainText</item>
        <item name="android:background">@color/altBackground</item>
        <item name="android:colorBackground">@color/altBackground</item>
    </style>

    <style name="PreferenceTheme" parent="AppTheme">
        <item name="android:textColor">@color/mainText</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

</resources>