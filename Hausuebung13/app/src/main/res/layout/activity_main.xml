                android:textColor="#000000"
                android:textSize="36sp" />

            <Button
                android:id="@+id/feld_33"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
